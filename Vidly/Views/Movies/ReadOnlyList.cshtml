
@using WebGrease
@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body >
    <h2>Movies</h2>






    <table id="movies" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>

            </tr>
        </thead>


        <tbody>
            @foreach (var movie in Model)
            {
                <tr>

                    <td>@movie.Name</td>

                    <td>@movie.Genre.Name</td>


                </tr>   }
        </tbody>
    </table>
</body>    

