    <thead>
    <tr>
        <th>Movie</th>
        <th>Genre</th>
        
    </tr>
    </thead>
    
   
    <tbody>
       @foreach (var movie in Model)
    {
        <tr>

            <td>@movie.Name</td>

            <td>@movie.Genre.Name</td>
            

    </tr>   } 
    </tbody>
</table>

